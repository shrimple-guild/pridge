{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "name": "Pridge",
  "version": "${version}",
  "description": "This is a formatter for the Shrimple/Prawn Academy Guild Bridge bot",
  "authors": [
    "Riccio",
    "Ilmars112",
    "appable"
  ],
  "contact": {
    "sources": "https://github.com/shrimple-guild/pridge",
    "homepage": "https://discord.gg/shrimple",
    "issues": "https://github.com/shrimple-guild/pridge/issues",
    "raw": "https://raw.githubusercontent.com/shrimple-guild/pridge"
  },
  "icon": "assets/pridge/icon.png",
  "license": "MIT",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "io.github.ricciow.Pridge"
      }
    ]
  },
  "mixins": [
    "pridge.mixins.json"
  ],
  "accessWidener": "pridge.accesswidener",
  "depends": {
    "fabricloader": ">=0.18.4",
    "minecraft": "${minecraft}",
    "fabric-api": ">=${fapi_version}",
    "fabric-language-kotlin": ">=1.13.8+kotlin.2.3.0"
  },
  "custom": {
    "modmenu": {
      "links": {
        "Discord": "https://discord.gg/shrimple"
      }
    }
  }
}